# Environment Configuration for VeroAllarme

# Application
DEBUG=False
APP_NAME=VeroAllarme
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://veroallarme:password@postgres:5432/veroallarme

# Redis
REDIS_URL=redis://redis:6379/0

# YOLO
YOLO_DEVICE=cpu  # Change to 'cuda' if GPU available
YOLO_CONFIDENCE_THRESHOLD=0.6

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Logging
LOG_LEVEL=INFO

# Motion Detection
MOTION_THRESHOLD=25
MOTION_MIN_AREA=500

# Heat Map
HEATMAP_HISTORY_DAYS=30
HEATMAP_ANOMALY_THRESHOLD=0.3

# Anomaly Detection
ANOMALY_Z_SCORE_THRESHOLD=2.5
